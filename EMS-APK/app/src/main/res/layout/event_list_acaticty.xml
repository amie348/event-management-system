<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_List_Activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="#5E35B1"
        android:paddingLeft="90dp"
        android:text="All Events"
        android:textColor="#ffff"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/scholerships"
        android:layout_width="372dp"
        android:layout_height="482dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/addnewbtn"
        android:layout_width="183dp"
        android:layout_height="63dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:text="Add New Event"
        app:backgroundTint="#5E35B1"
        app:layout_constraintStart_toStartOf="@+id/scholerships"
        app:layout_constraintTop_toBottomOf="@+id/scholerships" />

    <Button
        android:id="@+id/refbtn"
        android:layout_width="109dp"
        android:layout_height="63dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="Refresh"
        app:layout_constraintStart_toEndOf="@+id/addnewbtn"
        app:layout_constraintTop_toTopOf="@+id/addnewbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>